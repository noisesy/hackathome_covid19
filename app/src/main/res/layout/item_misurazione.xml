<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_user_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="12dp"
    android:background="@drawable/border"
    android:elevation="8dp">


    <TextView
        android:id="@+id/text_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/label_sintomi"
        app:layout_constraintEnd_toStartOf="@+id/text_misurazione"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_misurazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/text_sintomi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_misurazione2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura:"
        app:layout_constraintBottom_toTopOf="@+id/text_misurazione"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/label_sintomi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SINTOMI:"
        android:gravity="start"
        app:layout_constraintBottom_toTopOf="@id/label_sintomi"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/text_data" />

    <TextView
        android:id="@+id/text_sintomi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sintomi:"
        android:gravity="start"
        app:layout_constraintBottom_toTopOf="@id/label_note"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/label_sintomi" />

    <TextView
        android:id="@+id/label_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTE:"
        android:gravity="start"
        app:layout_constraintBottom_toTopOf="@id/text_note"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/text_sintomi" />

    <TextView
        android:id="@+id/text_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note:"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/label_note" />
</androidx.constraintlayout.widget.ConstraintLayout>